generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String              @id @default(uuid())
  username            String              @unique
  email               String              @unique
  password            String
  leetcodeUsername    String              @unique
  codeforcesUsername  String              @unique
  section             String
  enrollmentNum       String              @unique
  profileUrl          String?  
  groupId             String?     
  post                String?
  group               Group?              @relation(fields: [groupId], references: [id])
  submission          Submission[]
}

model Group {
  id                  String              @id @default(uuid())
  name                String              @unique
  coordinator         String              @unique
  coordinatorId       String
  member              User[]          
}

model Contest {
  id                  Int                 @id @default(autoincrement())
  questions           Question[]          @relation("ContestQuestions")
  groupLeaderboard    String[]
  submission          Submission[] 
  createdAt           DateTime            @default(now())
}

model Question {
  id                  String              @id @default(uuid())
  leetcodeUrl         String              
  codeforcesUrl       String             
  difficulty          String
  points              Int
  tags                String[]
  slug                String
  contests            Contest[]            @relation("ContestQuestions")
}

model Submission {
  id                   String             @id @default(uuid())
  userId               String
  questionUrl          String
  contestId            Int
  user                 User               @relation(fields: [userId], references: [id])
  contest              Contest            @relation(fields: [contestId], references: [id])
}